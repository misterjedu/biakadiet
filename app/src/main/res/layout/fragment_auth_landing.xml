<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".ui.auth.AuthLandingFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fr_auth_landing_view_group_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fr_auth_landing_header_iv"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fr_auth_landing_sign_up_tv"
            style="@style/DefaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Sign up with"
            android:textAlignment="center"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fr_auth_landing_header_iv" />

        <ImageView
            android:id="@+id/fr_auth_landing_google_icon_iv"
            style="@style/RoundIconBackground"
            android:layout_marginTop="24dp"
            android:src="@drawable/google"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fr_auth_landing_sign_up_tv" />

        <ImageView
            android:id="@+id/fr_auth_landing_facebook_icon_iv"
            style="@style/RoundIconBackground"

            android:layout_marginStart="32dp"
            android:src="@drawable/facebook"
            app:layout_constraintBottom_toBottomOf="@+id/fr_auth_landing_google_icon_iv"
            app:layout_constraintStart_toEndOf="@+id/fr_auth_landing_google_icon_iv"
            app:layout_constraintTop_toTopOf="@+id/fr_auth_landing_google_icon_iv" />

        <TextView
            android:id="@+id/fr_auth_landing_or_tv"
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="------ OR ------"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fr_auth_landing_facebook_icon_iv" />

        <Button
            android:id="@+id/fr_auth_landing_sign_up_with_email_button"
            style="@style/DefaultButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/default_margin"
            android:layout_marginTop="32dp"
            android:text="@string/sign_up_with_email"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fr_auth_landing_or_tv" />

        <TextView
            android:id="@+id/fr_auth_landing_already_have_account_tv"
            style="@style/DefaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:text="@string/already_have_an_account_sign_in"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/fr_auth_landing_sign_up_with_email_button"
            app:layout_constraintStart_toStartOf="@+id/fr_auth_landing_sign_up_with_email_button"
            app:layout_constraintTop_toBottomOf="@+id/fr_auth_landing_sign_up_with_email_button"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>