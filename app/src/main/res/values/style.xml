<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>


    <style name="CustomTextInputFieldStyle" parent="Theme.BiakaDiet">
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="endIconMode">custom</item>
    </style>

    <style name="CustomTextInputEditText" parent="Theme.BiakaDiet">
        <item name="android:drawablePadding">20dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/default_dark_text_color</item>
        <item name="android:textSize">@dimen/normal_text</item>

    </style>

</resources>