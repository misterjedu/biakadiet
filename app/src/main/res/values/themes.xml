<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BiakaDiet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <!--  Buttons  -->
    <style name="DefaultButton" parent="Theme.BiakaDiet">
        <item name="android:backgroundTint">@color/color_primary</item>
        <item name="android:paddingTop">@dimen/default_vertical_button_padding</item>
        <item name="android:paddingBottom">@dimen/default_vertical_button_padding</item>
        <item name="android:paddingLeft">@dimen/default_horizontal_button_padding</item>
        <item name="android:paddingRight">@dimen/default_horizontal_button_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="cornerRadius">10dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonWithNextArrow" parent="DefaultButton">
        <item name="icon">@drawable/arrow_forward</item>
        <item name="iconGravity">end</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>


    <!--    Texts-->
    <style name="DefaultText" parent="Theme.BiakaDiet">
        <item name="android:textColor">@color/default_dark_text_color</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="TitleText" parent="DefaultText">
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="HeaderText" parent="DefaultText">
        <item name="android:textSize">@dimen/extra_large_text</item>
    </style>


    <style name="RoundIconBackground" parent="Theme.BiakaDiet">
        <item name="android:background">@drawable/round_image_background</item>
        <item name="android:elevation">3dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:padding">15dp</item>
    </style>

</resources>