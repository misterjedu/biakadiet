<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/diet_goal_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="1dp"
    android:foreground="?attr/selectableItemBackground"
    android:background="@drawable/diet_goal_item_background"
    android:clickable="true"
    android:elevation="2dp"
    android:focusable="true"
    tools:context=".ui.onboarding.OnBoardingActivity">

    <CheckBox
        android:id="@+id/diet_goal_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/color_primary"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/diet_goal_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/diet_goal_tv" />

    <TextView
        android:id="@+id/diet_goal_tv"
        style="@style/DefaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="Diet Type"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>